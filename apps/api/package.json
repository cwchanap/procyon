{
    "name": "api",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "dev": "NODE_ENV=development /opt/homebrew/bin/bun --watch src/index.ts",
        "start": "/opt/homebrew/bin/bun src/index.ts",
        "build": "tsc --build",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "db:generate": "drizzle-kit generate --config=drizzle.config.dev.ts",
        "db:migrate": "/opt/homebrew/bin/bun src/migrate.ts",
        "db:push": "drizzle-kit push --config=drizzle.config.dev.ts",
        "db:studio": "drizzle-kit studio --config=drizzle.config.dev.ts",
        "deploy": "wrangler deploy",
        "deploy:staging": "wrangler deploy --env staging",
        "cf:dev": "wrangler dev",
        "cf:tail": "wrangler tail",
        "cf:d1:create": "wrangler d1 create procyon-db",
        "cf:d1:migrations:list": "wrangler d1 migrations list procyon-db",
        "cf:d1:migrations:apply": "wrangler d1 migrations apply procyon-db"
    },
    "dependencies": {
        "@cloudflare/d1": "^1.4.1",
        "@hono/node-server": "^1.12.0",
        "@hono/zod-validator": "^0.7.3",
        "bcryptjs": "^3.0.2",
        "drizzle-orm": "^0.44.5",
        "hono": "^4.9.7",
        "jsonwebtoken": "^9.0.2",
        "zod": "^4.1.8"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20250927.0",
        "@types/bcryptjs": "^3.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^20.14.10",
        "drizzle-kit": "^0.31.4",
        "typescript": "^5.9.2",
        "wrangler": "^4.40.3"
    }
}

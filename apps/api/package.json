{
    "name": "api",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "start": "tsx src/index.ts",
        "build": "tsc --build",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "db:generate": "drizzle-kit generate --config=drizzle.config.dev.ts",
        "db:migrate": "tsx src/migrate.ts",
        "db:push": "drizzle-kit push --config=drizzle.config.dev.ts",
        "db:studio": "drizzle-kit studio --config=drizzle.config.dev.ts"
    },
    "dependencies": {
        "@cloudflare/d1": "^1.4.1",
        "@hono/node-server": "^1.12.0",
        "@hono/zod-validator": "^0.7.3",
        "bcryptjs": "^3.0.2",
        "drizzle-orm": "^0.44.5",
        "hono": "^4.9.7",
        "jsonwebtoken": "^9.0.2",
        "zod": "^4.1.8"
    },
    "devDependencies": {
        "@types/bcryptjs": "^3.0.0",
        "@types/better-sqlite3": "^7.6.13",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^20.14.10",
        "better-sqlite3": "^12.2.0",
        "drizzle-kit": "^0.31.4",
        "tsx": "^4.16.2",
        "typescript": "^5.9.2"
    }
}

{
  "name": "api",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development bun --watch src/index.ts",
    "dev:api": "NODE_ENV=development bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist --target bun",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "bun test || echo \"No api tests yet; ignoring failure\"",
    "test:watch": "bun test --watch",
    "db:generate": "drizzle-kit generate --config=drizzle.config.dev.ts",
    "db:migrate": "bun src/migrate.ts",
    "db:push": "drizzle-kit push --config=drizzle.config.dev.ts",
    "db:studio": "drizzle-kit studio --config=drizzle.config.dev.ts",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "cf:dev": "wrangler dev",
    "cf:tail": "wrangler tail",
    "cf:d1:create": "wrangler d1 create procyon-db",
    "cf:d1:migrations:list": "wrangler d1 migrations list procyon-db",
    "cf:d1:migrations:apply": "wrangler d1 migrations apply procyon-db"
  },
  "dependencies": {
    "@cloudflare/d1": "^1.4.1",
    "@hono/node-server": "^1.12.0",
    "@hono/zod-validator": "^0.7.3",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.86.2",
    "better-auth": "^1.3.34",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.7",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250927.0",
    "@types/node": "^20.14.10",
    "drizzle-kit": "^0.31.4",
    "typescript": "^5.9.2",
    "wrangler": "^4.40.3"
  }
}

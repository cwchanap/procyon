---
import Layout from '../layouts/Layout.astro';
import LoginForm from '../components/LoginForm.tsx';
---

<Layout title='Sign In - Procyon Chess'>
    <div class='min-h-screen relative flex items-center justify-center'>
        <!-- Animated background particles -->
        <div class='absolute inset-0 overflow-hidden pointer-events-none'>
            <div
                class='absolute top-1/4 left-1/4 w-2 h-2 bg-white rounded-full opacity-30 animate-pulse'
            >
            </div>
            <div
                class='absolute top-3/4 right-1/3 w-1 h-1 bg-purple-300 rounded-full opacity-40 animate-ping'
                style='animation-delay: 1s;'
            >
            </div>
            <div
                class='absolute top-1/2 left-3/4 w-3 h-3 bg-pink-300 rounded-full opacity-20 animate-bounce'
                style='animation-delay: 2s;'
            >
            </div>
            <div
                class='absolute top-1/6 right-1/4 w-2 h-2 bg-blue-300 rounded-full opacity-30 animate-pulse'
                style='animation-delay: 3s;'
            >
            </div>
        </div>

        <div class='container mx-auto px-4 py-8 relative z-10'>
            <div class='text-center mb-8'>
                <div class='inline-block animate-float mb-4'>
                    <div
                        class='w-12 h-12 mx-auto bg-gradient-to-r from-yellow-400 to-orange-500 rounded-full flex items-center justify-center text-xl shadow-lg'
                    >
                        ♔
                    </div>
                </div>
                <h1
                    class='text-4xl font-bold bg-gradient-to-r from-cyan-400 via-purple-400 to-pink-400 bg-clip-text text-transparent mb-2'
                >
                    Procyon Chess
                </h1>
                <p class='text-purple-100'>
                    Welcome back to the ultimate chess platform
                </p>
            </div>

            <LoginForm client:load />

            <div class='text-center mt-8'>
                <a
                    href='/'
                    class='text-purple-300 hover:text-purple-100 transition-colors'
                >
                    ← Back to home
                </a>
            </div>
        </div>
    </div>
</Layout>

---
import Layout from '../layouts/Layout.astro';
import ShogiGame from '../components/ShogiGame.tsx';
---

<Layout title='Shogi Game'>
    <div class='min-h-screen relative'>
        <!-- Animated background particles -->
        <div class='absolute inset-0 overflow-hidden pointer-events-none'>
            <div
                class='absolute top-1/4 left-1/4 w-2 h-2 bg-orange-300 rounded-full opacity-30 animate-pulse'
            >
            </div>
            <div
                class='absolute top-3/4 right-1/3 w-1 h-1 bg-red-300 rounded-full opacity-40 animate-ping'
                style='animation-delay: 1s;'
            >
            </div>
            <div
                class='absolute top-1/2 left-3/4 w-3 h-3 bg-yellow-300 rounded-full opacity-20 animate-bounce'
                style='animation-delay: 2s;'
            >
            </div>
            <div
                class='absolute top-1/6 right-1/4 w-2 h-2 bg-orange-400 rounded-full opacity-30 animate-pulse'
                style='animation-delay: 3s;'
            >
            </div>
        </div>

        <div class='container mx-auto px-4 py-8 relative z-10'>
            <ShogiGame client:load />
        </div>
    </div>
</Layout>

---
import Layout from '../layouts/Layout.astro';
import ChessGameSelector from '../components/ChessGameSelector.tsx';
---

<Layout title='Chess Games'>
    <div class='min-h-screen relative'>
        <!-- Animated background particles -->
        <div class='absolute inset-0 overflow-hidden pointer-events-none'>
            <div
                class='absolute top-1/4 left-1/4 w-2 h-2 bg-white rounded-full opacity-30 animate-pulse'
            >
            </div>
            <div
                class='absolute top-3/4 right-1/3 w-1 h-1 bg-purple-300 rounded-full opacity-40 animate-ping'
                style='animation-delay: 1s;'
            >
            </div>
            <div
                class='absolute top-1/2 left-3/4 w-3 h-3 bg-pink-300 rounded-full opacity-20 animate-bounce'
                style='animation-delay: 2s;'
            >
            </div>
            <div
                class='absolute top-1/6 right-1/4 w-2 h-2 bg-blue-300 rounded-full opacity-30 animate-pulse'
                style='animation-delay: 3s;'
            >
            </div>
        </div>

        <div class='container mx-auto px-4 pt-8 pb-8 relative z-10'>
            <div class='text-center mb-12'>
                <div class='inline-block animate-float mb-6'>
                    <div
                        class='w-16 h-16 mx-auto bg-gradient-to-r from-yellow-400 to-orange-500 rounded-full flex items-center justify-center text-2xl shadow-lg'
                    >
                        â™”
                    </div>
                </div>
                <h1
                    class='text-6xl font-bold bg-gradient-to-r from-cyan-400 via-purple-400 to-pink-400 bg-clip-text text-transparent mb-6 animate-pulse'
                >
                    Procyon Chess
                </h1>
                <p
                    class='text-xl text-purple-100 max-w-2xl mx-auto leading-relaxed'
                >
                    Experience chess like never before. Choose from various game
                    types and immerse yourself in the ultimate chess platform.
                </p>
                <div class='mt-8 flex justify-center'>
                    <div
                        class='h-1 w-32 bg-gradient-to-r from-transparent via-purple-400 to-transparent rounded-full'
                    >
                    </div>
                </div>
            </div>
            <ChessGameSelector client:load />
        </div>
    </div>
</Layout>

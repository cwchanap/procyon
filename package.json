{
  "name": "procyon",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --filter=web --filter=api --ui=tui",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "lint:all": "eslint . --ext .ts,.tsx,.js,.jsx,.mjs",
    "lint:fix-all": "eslint . --ext .ts,.tsx,.js,.jsx,.mjs --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:e2e": "turbo test:e2e --filter=web",
    "test:e2e:ui": "turbo test:e2e:ui --filter=web",
    "test:e2e:headed": "turbo test:e2e:headed --filter=web",
    "test:e2e:debug": "turbo test:e2e:debug --filter=web",
    "clean": "turbo clean && rm -rf node_modules",
    "web:dev": "turbo dev --filter=web --ui=tui",
    "api:dev": "turbo dev --filter=api --ui=tui",
    "deploy": "bun run build && cd apps/api && bun run deploy",
    "deploy:staging": "bun run build && cd apps/api && bun run deploy:staging",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md,astro}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/bun": "latest",
    "better-sqlite3": "^12.4.1",
    "eslint": "^9.35.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "turbo": "^2.0.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0"
  },
  "packageManager": "bun@1.2.21"
}

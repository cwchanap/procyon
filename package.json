{
    "name": "procyon",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "lint": "turbo lint",
        "lint:fix": "turbo lint:fix",
        "lint:all": "eslint . --ext .ts,.tsx,.js,.jsx,.mjs",
        "lint:fix-all": "eslint . --ext .ts,.tsx,.js,.jsx,.mjs --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "test": "turbo test",
        "test:watch": "turbo test:watch",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:debug": "playwright test --debug",
        "clean": "turbo clean && rm -rf node_modules",
        "web:dev": "turbo dev --filter=web",
        "api:dev": "turbo dev --filter=api",
        "prepare": "husky"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,mjs}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,css,md,astro}": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@eslint/js": "^9.35.0",
        "@playwright/test": "^1.55.0",
        "@types/bun": "latest",
        "eslint": "^9.35.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.6",
        "prettier": "^3.6.2",
        "prettier-plugin-astro": "^0.14.1",
        "turbo": "^2.0.0",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.43.0"
    },
    "packageManager": "bun@1.2.21"
}

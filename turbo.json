{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        ".astro/**"
      ]
    },
    "lint": {},
    "lint:fix": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:web": {
      "cache": false,
      "persistent": true,
      "dependsOn": []
    },
    "dev:api": {
      "cache": false,
      "persistent": true,
      "dependsOn": []
    },
    "start": {
      "dependsOn": [
        "build"
      ],
      "cache": false
    },
    "test": {},
    "test:watch": {
      "cache": false,
      "persistent": true
    }
  }
}